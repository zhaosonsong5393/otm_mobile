page{background-color:rgb(243, 243, 243);margin-left:auto;}
.app .search{
  width: 735rpx;
  height: 65rpx;
  padding: 12.5rpx 0 12.5rpx 15rpx;
  background: rgb(227, 230, 233);
}
.app .search-left{
  flex: 8;
  background: #ffffff;
}
.app .search-left input{
  display: inline-block;
  height: 65rpx;
  font-size: 26rpx;
}
.search-placeholder{
  color: rgb(40, 41, 43);
  line-height: 20rpx;
}
.app .search .search-left image{
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  padding: 15rpx 15rpx 15rpx 20rpx;
}
.app .search .search-right{
  flex: 1;
}
.app .search .search-right image{
  width: 45rpx;
  height: 45rpx;
  padding: 10rpx;
  background-color: rgb(248, 183, 3);
}

.flex-wrp {
  display:flex;

}


.app .categroy{
  height: 80rpx;
  background: #ffffff;
  text-align: center;
}

.app .categroy .item_type{
    width: 50%;
    padding-top: 20rpx;
    font-size: 14px;
    border-right: 1px solid #cccccc;
}

.app .categroy .item_sort{
    width: 50%;
    padding-top: 20rpx;
    font-size: 14px;
}
.app .items{
  margin-top: 10rpx;
  background: #ffffff;
  text-align: center;
  min-height: 300px;
  clear: both;
}

.app .items .item{
  width:100%;
  height:105px;
  background-color:rgb(255, 255, 255);
  margin-bottom:auto;
  margin-right:auto;
  margin-top:1px;
  opacity:1;
  margin-left:auto;
  padding: 8px;
  border-bottom: 1px solid #e2e2e2;
  display: flex;
}

.app .items .item .pic{
  height: 90px;
  width: 110px;
}
.app .items .item .pic image{
  width:100%;
  height:100%;
  border-radius:inherit;
}

.app .items .item .content{
  text-align: left;
  margin-left: 10px;
  height: 90px;
  width: 70%;
}
.app .items .item .name{
  width: 60%;
  float:left;
}
.app .items .item .price{
  text-align: right;
  color: red;
}
.app .items .item .remark{
  margin-top: 5px;
  font-size: 12px;
  color: #8d8c8c;
}


