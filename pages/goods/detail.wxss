page {
  display: flex;
  flex-direction: column;
  height: 100%;
}
/* 直接设置swiper属性 */
swiper {
  height: 500rpx;
}
swiper-item image {
  width: 100%;
  height: 100%;
}
.detail {
  display: flex;
  flex-direction: column;
  margin-top: 15rpx;
  margin-bottom: 0rpx;
}
.detail .title {
  font-size: 40rpx;
  margin: 10rpx;
  color: black;
  text-align: justify;
}
.detail .price {
  color: red;
  font-size: 40rpx;
  margin: 10rpx;
}
.line_flag {
  width: 80rpx;
  height: 1rpx;
  display: inline-block;
  margin: 20rpx auto;
  background-color: gainsboro;
  text-align: center;
}
.line {
  width: 100%;
  height: 2rpx;
  display: inline-block;
  margin: 20rpx 0rpx;
  background-color: gainsboro;
  text-align: center;
}
.detail-nav {
  display: flex;
  flex-direction: row;
  align-items: center;
  float: left;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 1;
  width: 100%;
  height: 100rpx;
}
.button-green {
  background-color: #4caf50; /* Green */
}
.button-red {
  background-color: #f44336; /* 红色 */
}
.image_detail {
  width: 95%;
}
button {
  color: white;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 30rpx;
  border-radius: 0rpx;
  width: 50%;
  height: 100%;
  line-height: 100rpx;
}
.detail-nav image {
  width: 70rpx;
  height: 50rpx;
  margin: 20rpx 40rpx;
}
.line_nav {
  width: 5rpx;
  height: 100%;
  background-color: gainsboro;
}
/* 占位 */
.temp {
  height: 100rpx;
}
text {
  display: block;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  margin: 10rpx;
}
.text-remark-title{
  font-weight: bold;
}

.text-detail-title{
  font-weight: bold;
}

.text-remark {
  display: block;
  font-size: 25rpx;
  margin: 10rpx;
}


.tabs-box{
  display: flex;
}
.tabs-item.selected {
    color:#000000;
    border-bottom:2px solid #000000;
}
.tabs-item {
    width:50%;
    color:#cccccc;
    font-size:28rpx;
    align-items:center;
    justify-content:center;
    display:flex;
    border-bottom:1rpx solid #D0D0D7;
    padding-bottom:10rpx;
}
.product-detail-box{
  background: #F0F4F3

}

.product-info{
  width:100%;
  padding: 10px;
  background: #ffffff;

}
.comments{

  width: 100%;
}
.comments .comment{
  padding: 10px;
  background: #ffffff;
  margin-top: 20rpx;
}

.comments .comment .title{
  height: 75rpx;
  display: flex;
}
.comments .comment .time{
  margin-top: 10rpx;
  height: 30rpx;
  font-size: 22rpx;
  color: #aaa9a9;
}
.comments .comment .title .avat{
  height: 70rpx;
  width: 70rpx;
  border-radius: 80rpx;
}
.comments .comment .title .thestar{
  height: 50rpx;
  display: flex;
  padding: auto;
}
.comments .comment .title .star{
  height: 30rpx;
  width: 30rpx;
  display: flex;
  line-height: 30rpx;
  padding-left:7rpx;
  padding-top: 15rpx;
}
.comments .comment .title .name{
  margin-left: 20rpx;
  color: #aaa9a9;
  font-size: 14px;
  line-height: 40rpx;
}

.comments .comment .content{
  margin-top: 20rpx;
  font-size: 28rpx;
}
.clear{
  height: 100rpx;
  background: #ffffff
}