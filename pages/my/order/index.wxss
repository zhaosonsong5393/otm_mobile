page {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.tabs-box{
  display: flex;
  background-color: #FFC63C;
  height: 90rpx;
  
}
.tabs-item.selected {
    border-bottom:2px solid #ffffff;
    color: #ffffff;
    font-weight: bold;
}
.tabs-item {
    width:25%;
    color:#f0ecec;
    font-size:28rpx;
    align-items:center;
    justify-content:center;
    display:flex;
    border-bottom:1rpx solid #D0D0D7;
    padding-bottom:10rpx;
}
.product-detail-box{
  background: #F0F4F3

}

.product-info{
  width:100%;

  background: #ffffff;

}
.details{
  width: 100%;
 
}
.details .detail {
  height: 180rpx;
  padding: 20rpx;
  width: 100%;
  display: flex;
  border-bottom: 20rpx solid #D0D0D7
}
.details .detail .tx{
  height: 160rpx;
  width: 200rpx;
  
}
.details .detail .info{
  margin-left: 20rpx;
  width: 50%;
  
  font-size: 26rpx;
}
.details .detail .info .number{
  margin-top: 25rpx;
}
.details .detail .info .name{
  height: 60rpx;
}

.details .detail .info .price{
  margin-top: 15rpx;
}

.details .detail .status{
  font-size: 30rpx;
  margin-left: 15rpx;
  font-weight: bold;
  text-align: right;
  width: 20%;
  color: red;
  padding-right: 40rpx;
}

.details .detail .status .btn-primary {
  color: #fdfffd;
  margin-top: 50rpx;
  background-color: #1db863;
}