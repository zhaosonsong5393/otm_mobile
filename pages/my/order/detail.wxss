page {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.recipient{
  border-top: 25rpx solid #f0ecec;
  font-size: 30rpx;
  padding-bottom: 15rpx;
  padding-right: 25rpx;
}
.recipient .title{
  font-weight: bold;
  padding-top: 20rpx;
  padding-left: 25rpx;
  border-bottom: 1px solid #f0ecec;
  height: 65rpx;
  font-size: 34rpx;
}
.recipient .content{
  padding-left: 25rpx;
  margin-top: 20rpx;
}

.recipient .content .label{
  font-weight: bold;
  padding-left: 25rpx;
  color: #aaaaaa;
  width: 160rpx;
}

.recipient .content view{
  display: flex;
  margin-bottom: 20rpx;
}

.recipient .content view .text{
  width: 80%;
}

.recipient .content view .status{
  color: red;
}

.product_info{

  border-top: 25rpx solid #f0ecec;
  font-size: 30rpx;
  padding-bottom: 15rpx;
  padding-right: 25rpx;
}

.product_info .title{
  font-weight: bold;
  padding-top: 20rpx;
  padding-left: 25rpx;
  border-bottom: 1px solid #f0ecec;
  height: 65rpx;
  font-size: 34rpx;
}

.product_info .content{
  padding-left: 25rpx;
  margin-top: 20rpx;
}
.product_info .content .items{
  padding-left: 25rpx;
  margin-top: 20rpx;
  border-bottom: 1px solid #f0ecec;
  display: flex;
  padding-bottom: 25rpx;
}

.product_info .content .items .img .tx{
  height: 160rpx;
  width: 200rpx;
}

.product_info .content .items .info{
  padding-left: 20rpx;
  padding-right: 25rpx;
}

.product_info .content .items .remark{
  color: #aaaaaa;
  margin-top: 10rpx;
  font-size: 26rpx;
}

.product_info .content .items .other{
  margin-top: 10rpx;
  color: red;
 
}



.product_info .content .items .other .money{
  width: 50%;
  display: block;
  float: left;
}

.product_info .content .items .other .number{
  text-align: right;
  width: 50%;
  display: block; 
  float: left;
}

.recipient .more{
  padding-left: 25rpx;
  margin-top: 20rpx;
  width: 100%;
  border-bottom: 30rpx solid #f0ecec;
}

.recipient .more view{
  margin-top: 20rpx;
  height: 66rpx;
  border-bottom: 1px solid #f0ecec;
  margin-right: 25rpx;
}

.recipient .more view label{
  width: 50%;
  display: block;
  float: left;
}

.recipient .more view text{
  width: 50%;
  text-align: right;
  display: block;
  float: left;
 
}
.recipient .more view .pay_amount{
  color: red;
 
}

.clear{
  height: 115rpx;
  background: #ffffff
}



.detail-nav {
  display: flex;
  flex-direction: row;
  align-items: center;
  float: left;
  background-color: #FFC63C;
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 1;
  width: 100%;
  height: 130rpx;
  text-align: center;
}

.detail-nav .btn-zf {
  width: 100%;
  font-size: 36rpx;
  text-align: center;
  color: #ffffff;
  
}
